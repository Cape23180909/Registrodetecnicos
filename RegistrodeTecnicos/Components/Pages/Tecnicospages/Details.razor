@page "/Create2"
@page "/Tecnico/Create/{TecnicoId:int}"
@inject TecnicoServies tecnicoServies
@inject NavigationManager navigationManager
@rendermode InteractiveServer

<PageTitle>Detalles de Prioridades</PageTitle>

@if (tecnicoServies != null)
{
    <div class="container">
        <div class="card shadow-header">
            <div class="card-header  bg-primary text-white text-center py-2 rounded">
                <h3 class="text-center"><strong>Detalles del tecnico</strong></h3>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-6">

                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li><strong>PrioridadId:</strong> @tecnico.TecnicoId</li>
                                <li><strong>Descripción:</strong> @tecnico.Nombre</li>
                                <li><strong>Días Compromiso:</strong> @tecnico.Sueldohora</li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-outline-primary" @onclick="Volver"><i class="bi bi-box-arrow-left"></i> Volver</button>
            </div>
        </div>
    </div>
}
else
{
    <p>Prioridad no encontrada.</p>
}



@code {
    [Parameter]
    public int TecnicosId { get; set; }
    public Tecnicos? tecnico { get; set; } = new Tecnicos();

    protected override async Task OnInitializedAsync()
    {
        tecnico = await tecnicoServies.Buscar(TecnicosId);
    }

    public void Volver()
    {
        navigationManager.NavigateTo("/Pri/Index");
    }
}

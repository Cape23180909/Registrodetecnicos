@page "/Create"
@inject TecnicoServies tecnicoServies
@rendermode InteractiveServer

<EditForm Model="ListaTecnicos" class="border shadow-lg p-3 rounded">
    <div class="card-header bg-primary text-white text-center py-2 rounded">
        <h3 style="font-weight: bold;" class="mb-0 font-weight-bold">Consulta Tecnicos</h3>
    </div>
    <div class="card-body">
        <div class="row mb-3 align-items-end">
            <div class="col-md-3">
                <label for="Filtro" class="form-label">Filtrar por:</label>
                <select @bind="filtro" class="form-select">
                    <option value="id">ID</option>
                    <option value="descripcion">Descripción</option>
                    <option value="diascompromiso">Días Compromiso</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="ValorFiltro" class="form-label">Búsqueda:</label>
                <div class="input-group">
                    <input @bind="valorFiltro" class="form-control" placeholder="Buscar" />
                    <button @onclick="Buscar" class="btn btn-outline-primary" type="button">
                        <span class="bi bi-search"></span> Buscar
                    </button>
                </div>
            </div>
            <div class="col-md-3 text-end">
                <a href="/Create3" class="btn btn-success" type="button"><span class="bi bi-floppy-nav-menu" aria-hidden="Create3"></span> Crear </a>
            </div>
        </div>
    </div>
    <table class="table table-bordered text-center">
        <thead class="bg-primary text-white">
            <tr>
                <th>TecnicoId</th>
                <th>Nombre</th>
                <th>SueldoHora</th>
                <th>Ver</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in ListaTecnicos)
            {
                <tr>
                    <td>@p.TecnicoId</td>
                    <td>@p.Nombre</td>
                    <td>@p.Sueldohora</td>
                    <td>
                        <a href="/Prioridad/Details/@p.TecnicoId" style="border: none; background-color: transparent;" class="btn-detalle">
                            <span class="bi bi-info-circle-fill" style="font-size: 2rem;"></span>
                        </a>
                    </td>
                    <td>
                        <a href="/Prioridad/Edit/@p.TecnicoId" style="border: none; background-color: transparent;" class="btn-editar">
                            <span class="bi bi-marker-tip" style="font-size: 2rem;"></span>
                        </a>
                    </td>
                    <td>
                        <a href="/Prioridad/Delete/@p.TecnicoId" style="border: none; background-color: transparent;" class="btn-eliminar">
                            <span class="bi bi-dash-circle-fill" style="font-size: 2rem;"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</EditForm>

@code {
    public List<Tecnicos> ListaTecnicos = new List<Tecnicos>();

    private string filtro = "id";
    private string valorFiltro = "";

    protected override void OnInitialized()
    {
        ListaTecnicos = tecnicoServies.Listar(c => true);
    }

    private void Buscar()
    {
        if (valorFiltro.Trim() != "")
        {
            if (filtro == "id" && int.TryParse(valorFiltro, out int TecnicoId))
            {
                ListaTecnicos = tecnicoServies.Listar(p => p.TecnicoId == TecnicoId);
            }
            else if (filtro == "descripcion")
            {
                ListaTecnicos = tecnicoServies.Listar(p => p.Nombre == valorFiltro);
            }
            else if (filtro == "diascompromiso" && int.TryParse(valorFiltro, out int DiasCompromiso))
            {
                ListaTecnicos = tecnicoServies.Listar(p => p.Sueldohora == DiasCompromiso);
            }
        }
        else
        {
            ListaTecnicos = tecnicoServies.Listar(p => true);
        }
    }
}
